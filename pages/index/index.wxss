.nav-bar {
  display: flex;
  background-color: #34A0E3;
}
.nav-item {
  width: 80rpx;
  padding: 10rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #CDE6F7;
}
.nav-active {
  color: #fff;
  font-weight: bold;
  font-size: 32rpx;
}
.panel {
  position: relative;
  width: 690rpx;
  height: 435rpx;
  padding: 0 30rpx;
}
.panel-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0.1;
  z-index: -2;
}
.panel-body {
  position: relative;
  width: 90%;
  height: 100%;
}
.panel-img {
  position: absolute;
  width: 690rpx;
  height: 435rpx;
  z-index: -1;
}
.panel-title {
  position: absolute;
  bottom: 40rpx;
  left: 20rpx;
  font-size: 30rpx;
  color: #fff;
}
.panel-subtitle {
  position: absolute;
  bottom: 10rpx;
  left: 20rpx;
  font-size: 25rpx;
  color: #AAAAAA;
}
.articles {
  padding: 0 30rpx;
}
.article-item {
  display: flex;
  padding: 30rpx 0;
  border-top: 1rpx solid #AAAAAA;
}
.article:first-child .article-item {
  border: none;
}
.article-body {
  width: 460rpx;
  position: relative;
}
.article-title {
  font-size: 30rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.article-subtitle {
  position: absolute;
  bottom: 0;
  font-size: 25rpx;
  color: #CCC;
}
.article-img {
  width: 220rpx;
  height: 140rpx;
  margin-left: 10rpx;
}